<div class="login_form">
  <%= form_tag '/text', method: 'post' do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= label_tag :name, 'Name:' %>
    <%= text_field_tag :name %><br />
    <%= label_tag :phone_number, 'Phone Number:' %>
    <%= text_field_tag :phone_number %><br />
    <%= label_tag :message, 'Message:' %>
    <%= text_area_tag :message, nil, size: '26x3' %><br />

    <%= submit_tag 'Send Message' %>
    <%= button_tag 'Reset', type: 'reset' %>
  <%- end -%>
</div>
<table align="center">
  <thead>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Message</th>
  </thead>
  <tbody>
    <%- textlogs.each do |textlog| -%>
    <tr>
      <td><%= textlog.name %></td>
      <td><%= textlog.phone %></td>
      <td><%= textlog.message %></td>
    </tr>
    <%- end -%>
  </tbody>
</table>
